<!DOCTYPE html>
<html lang="en">

{{>head}}

<body class="login">

  <style>
    .error{
      background-color: brown;
      color: aliceblue;
      display: none;

    }
  </style>
  <main class="form-signin">
    <form action="login" method="post">

      <h1 class="h3 mb-3 text-center">Acceso al panel de control</h1>

      <div class="form-floating">
        <input type="email" class="form-control" id="username" placeholder="name@example.com" name="username">
        <label for="username">Usuario</label>
      </div>
      <div class="form-floating">
        <input type="password" class="form-control" id="password" placeholder="Contraseña" name="password">
        <label for="password">Contraseña</label>
      </div>


      <button class="w-100 btn btn-lg btn-info" type="submit">Entrar</button>
    </form>
    <p class="error">USUARIO O CONTRASEÑA INCORRECTO</p>

    <a href="admin.html">IR A ADMIN (MODO DEV)</a>

  </main>

  <script>
    const usuario ="admin@test.com"
    const pass ="admin"

   
    const button = document.querySelector('button')

    button.addEventListener('click', (e)=>{
      e.preventDefault()
      const error = document.querySelector('.error')
      const inputUsuario = document.querySelector('#username').value
      const inputPass = document.querySelector('#password').value

      if(usuario==inputUsuario && pass==inputPass){
          window.location.href = "http://localhost:3000/admin";
      }
      else{
        error.style.display='block'
      }

    })
  </script>

</body>

</html>