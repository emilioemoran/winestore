<section class="products section">
        <div class="container my-5 text-center">
            <h2 class="fs-1">Productos</h2>
            <div class="row">
                {{#each products}}
                <div class="col-md-3">
                    <div class="product-item">
                        <div class="product-thumb">
                            <img class="img-fluid" src='/assets/img/wines/{{picture}}'
                                alt="product-img" />
                            <div class="preview-meta">
                                <ul>
                                    <li>
                                        <span data-bs-toggle="modal" data-bs-target='#product-modal-{{id}}'>
                                            <i class="bi bi-search"></i>
                                        </span>
                                    </li>

                                </ul>
                            </div>
                        </div>
                        <div class="product-content">
                            <h4><a href="">{{name}}</a></h4>
                            <p class="price">{{year}}</p>
                        </div>
                    </div>
                </div>
                

                <!-- Modal -->
                <div class="modal product-modal fade" id='product-modal-{{id}}' data-bs-backdrop="static"
                    data-bs-keyboard="false"  aria-labelledby="product-modal" aria-hidden="true">
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close"><i
                            class="bi bi-x"></i></button>
                    <div class="modal-dialog modal-lg">
                        <div class="modal-content">
                            <div class="modal-body">
                                <div class="row">
                                    <div class="col-md-8 col-sm-6 col-xs-12">
                                        <div class="modal-image">
                                            <img class="img-fluid" src='/assets/img/wines/{{picture}}'
                                                alt="product-img" />
                                        </div>
                                    </div>
                                    <div class="col-md-4 col-sm-6 col-xs-12">
                                        <div class="product-short-details">
                                            <h2 class="product-title">{{name}}</h2>
                                            <p class="product-price">{{year}}</p>
                                            <div class="product-short-description">
                                                <ul>
                                                    <li> i7 </li>
                                                    <li> 11gen </li>
                                                    <li> 256gb SSD </li>
                                                    <li> 16 gb RAM </li>
                                                </ul>
                                            </div>

                                            <a href="detalle-producto.html" class="btn btn-transparent d-block mb-3">Ver detalles
                                                del producto</a>

                                            <a href="mailto:"
                                                class="btn btn-info mt-20">Comprar</a>
                                        </div>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                {{/each}}
            </div>
        </div>
</section>