<!DOCTYPE html>
<html lang="en">
{{>head}}
<body id="backend">
     {{>nav}}
    <h1>Editando: Lenovo X200</h1>
    <div class="container mb-4">
        
        <!-- Main Menu Section -->
        <div class="editar-producto mt-4">
            <form action="/editar-producto/{{producto.id}}" method="post" >
                <div class="row">

                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="row">
                            <div class="mb-3 col-12 col-md-6">
                                <label for="nombre" class="form-label">Nombre</label>
                                <input type="text" class="form-control" id="name" value={{producto.name}} name="name"
                                    required>
                            </div>


                            <div class="mb-3 col-12 col-md-6">
                                <label for="precio" class="form-label">Precio (u$s)</label>
                                <input type="text" class="form-control" id="price" value={{producto.price}} name="price"
                                    title="Sólo números" required>
                            </div>
                        </div>


                        <div class="mb-3 col-12 editar" id="imagenCargada">
                            <img src='/assets/img/wines/{{producto.picture}}' alt="" class="img-fluid">
                            <input type="text" class="form-control" id="picture" value={{producto.picture}} name="picture"
                                    style="display:none" accept=".png,.jpg,.jpeg" required>
                            {{!-- <input class="form-control" type="file" id="picture" name="picture"
                                style="display:none" accept=".png,.jpg,.jpeg" value={{producto.picture}}> --}}
                        </div>

                    </div>
                    <div class="col-12 col-md-6 col-lg-8">
                        <div class="row">
                            <div class="mb-3 col-8">
                                <label for="descripcion" class="form-label">Descripcion</label>
                                <textarea class="form-control" id="description" rows="16"
                                    name="description">{{producto.description}}</textarea>
                            </div>
                            <div class="mb-3 col-4">
                                <label for="caracteristicas" class="form-label">Caracteristicas</label>
                                <input type="text" class="form-control" id="year" value={{producto.year}} name="year"
                                    title="Sólo números" required>
                                <input type="text" class="form-control" id="country" value={{producto.country}} name="country"
                                    title="Sólo números" required>
                                <input type="text" class="form-control" id="region" value={{producto.region}} name="region"
                                    title="Sólo números" required>
                            </div>
                        </div>
                    </div>
                </div>

                <button type="submit" class="btn btn-info">editar</button>
                <a href="/admin" class="btn btn-info">Volver al listado de productos</a>
            </form>
        </div>
    </div>

 {{>footer}}

    <!-- 
    Essential Scripts
    =====================================-->
    <!-- Option 1: Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
        crossorigin="anonymous"></script>


    <script>
        // https://developer.mozilla.org/en-US/docs/Web/API/File/Using_files_from_web_applications
        const contenedor = document.querySelector("#imagenCargada"),
            elInput = document.querySelector("#imagenDeProducto");

        contenedor.addEventListener("click", function (e) {
            if (elInput) {
                elInput.click();
                document.querySelector("#imagenCargada img").style.display = "none";
                elInput.style.display = "block"
                contenedor.classList.remove("editar")
            }
        }, false);
    </script>
</body>

</html>